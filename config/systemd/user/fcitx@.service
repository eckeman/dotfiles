[Unit]
Description=Flexible Input Method Framwork (fcitx) service (display %i)

Before=xbase@%i.target
After=xorg@%i.service

[Service]
ExecStart=/usr/bin/fcitx -D

Environment=DISPLAY=:%i
Environment=XMODIFIERS=@im=fcitx
Environment=XIM=fcitx
Environment=XIM_PROGRAM=fcitx
Environment=GTK_IM_MODULE=fcitx
Environment=QT_IM_MODULE=fcitx

[Install]
WantedBy=xbase@%i.target
