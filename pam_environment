# Locale
LANG              DEFAULT=en_US.UTF-8
LC_ALL            DEFAULT=${LANG}

# Paths
HOME              DEFAULT=/home/@{PAM_USER} OVERRIDE=${HOME}
GOPATH            DEFAULT=${HOME}/go
PATH              DEFAULT=${HOME}/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/bin/core_perl:${HOME}/.cabal/bin:${GOPATH}/bin

# Tools
VISUAL            DEFAULT=vim
EDITOR            DEFAULT=vim
PAGER             DEFAULT=less
TERMINAL          DEFAULT=termite
BROWSER           DEFAULT=browser
XBMC_HOME         DEFAULT=/usr/share/plexhometheater

# XDG
XDG_VTNR          DEFAULT=1
XDG_CACHE_HOME    DEFAULT=${HOME}/.local/cache
XDG_CONFIG_HOME   DEFAULT=${HOME}/.config
XDG_DATA_HOME     DEFAULT=${HOME}/.local/share
XDG_DOWNLOAD_DIR  DEFAULT=${HOME}/downloads
XDG_DOCUMENTS_DIR DEFAULT=${HOME}/documents
XDG_MUSIC_DIR     DEFAULT=${HOME}/music
XDG_PICTURES_DIR  DEFAULT=${HOME}/pictures
XDG_VIDEOS_DIR    DEFAULT=${HOME}/videos

GREP_OPTIONS      DEFAULT=--color=auto
LESS              DEFAULT=-R

fish_use_fishd    DEFAULT=0
