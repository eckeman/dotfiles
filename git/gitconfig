[user]
  name = Terje Larsen
  email = terlar@gmail.com
[core]
  excludesfile = ~/.gitignore
[alias]
  unstage = reset HEAD
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  ci = commit -s -v
  cim = commit -s -v -m
  co = checkout
  st = status
  d = difftool
  dw = diff --color-words
  ds = diff --stat
[pager]
  color = true
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
  prompt = false
[push]
  default = upstream

[url "git://github.com/"]
  # Read-only
  insteadOf = gh:
[url "git@github.com:"]
  # With write access
  insteadOf = wgh:
