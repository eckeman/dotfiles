[user]
  name = Terje Larsen
  email = terlar@gmail.com
[core]
  excludesfile = ~/.gitignore
[alias]
  subpull = submodule foreach git pull

  unstage  = reset HEAD
  uncommit = reset --soft HEAD^
  recommit = commit --amend

  l  = log --graph --decorate --pretty=format:\"%C(yellow)%h%C(reset)%C(bold)%d%C(reset) %s %C(yellow)(%C(cyan)%ar%C(yellow), %C(blue)%an%C(yellow))%C(reset)\"
  ls = log --graph --decorate --stat --pretty=format:\"%C(yellow)%h%C(reset)%C(bold)%d%C(reset) %s%n %C(cyan)%ar%C(reset), %C(blue)%an%C(reset)%n\"

  wc = whatchanged -p --abbrev-commit --pretty=medium

  ci  = commit -v
  cim = commit -v -m

  co = checkout
  st = status

  d  = diff
  dt = difftool
  dw = diff --color-words
  ds = diff --stat
[pager]
  color = true
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
  prompt = false
[push]
  default = upstream

[github]
  user = terlar
[url "git://github.com/"]
  # Read-only
  insteadOf = gh:
[url "git@github.com:"]
  # With write access
  insteadOf = wgh:
