#compdef rake

_rake_task_list_outdated() {
  [ ! -f .rake_tasks ] && return 0

  files=$(find Rakefile lib/tasks -newer .rake_tasks)
  [ ! -z $files ] && return 0

  return 1
}

if [ -f Rakefile ]; then
  if _rake_task_list_outdated; then
    rake --silent --tasks | cut -d " " -f 2 | cut -d "[" -f 1 > .rake_tasks
  fi
  compadd $(cat .rake_tasks)
fi
