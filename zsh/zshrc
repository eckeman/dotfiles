ZSH=$HOME/.zsh
autoload -U compinit; compinit -i;
autoload colors; colors;

fpath=($ZSH/functions $ZSH/completions $fpath)
autoload -U $ZSH/functions/*(:t)

for zsh_source ($HOME/.zsh/*.zsh) source $zsh_source

# Z
if [[ -f $HOME/z.sh ]]; then
  . $HOME/z.sh
  function precmd () {
    _z --add "$(pwd -P)"
  }
fi

# Load localrc
[[ -f $HOME/.localrc ]] && . $HOME/.localrc
